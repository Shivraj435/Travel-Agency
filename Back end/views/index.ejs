<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Destinations</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="/style.css"/>
</head>
<body>
    <h2>Destination Packages</h2>
 
    <div class="container">
        <% if (destinations.length === 0) { %>
            <!-- No results message -->
            <p style="text-align: center; font-size: 2rem; font-weight: 700;">No results found.</p>
        <% } else { %>
            <% for (let destination of destinations) { %>
                <div class="card">
                    <div class="card-img-container">
                        <img src="<%= destination.image %>" class="card-img-top" alt="Destination Image">
                    </div>
                    <div class="card-body">
                        <h5>
                            <i class="fas fa-map-marker-alt"></i> <%= destination.location %>
                        </h5>
                        <p id="description"><%= destination.description %></p>
                        <p >Rs:-<%= destination.price %>/Person</p>
                    </div>
                </div>
            <% } %>
        <% } %>
  </div>
    <br>
</body>
</html>